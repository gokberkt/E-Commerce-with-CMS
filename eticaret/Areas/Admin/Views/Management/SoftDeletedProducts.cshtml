
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using PagedList
@using PagedList.Mvc

@model IPagedList<Products>

<div class="">
    <div class="page-header-title">
        <h4 class="page-title">Tüm Ürünler</h4>
    </div>
</div>
<div class="page-content-wrapper ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <h4 class="m-b-30 m-t-0"></h4>
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Ürün ID</th>
                                            <th>Ürün Adı</th>
                                            <th>Açıklama</th>
                                            <th>Fiyat</th>
                                            <th>Satış Sayısı</th>
                                            <th>Stok Sayısı</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Products item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@item.Description</td>
                                                <td>@string.Format("{0:C}", item.Price)</td>
                                                <td>@item.NumberOfSales</td>
                                                <td>@item.UnitsInStock</td>
                                                <td>
                                                    <a href="/Admin/Management/EditProduct/@item.ID" class="btn btn-sm btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @Html.PagedListPager(Model, _pageNo => Url.Action("SoftDeletedProducts", "Management", new { pageNo = _pageNo }))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End Row -->
    </div><!-- container -->
</div>
