
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <form class="form-horizontal" method="post" action="">
                    <h4 class="m-t-0 m-b-30">Kategori Ekle</h4>
                    <div class="row">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center m-t-10 m-b-10">@ViewBag.Error</div>
                        }
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-body" style="border: 1px solid #e2e2e2;">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Kategori Adı</label>
                                        <div class="col-md-10">
                                            <input name="Name" type="text" spellcheck="false" class="form-control" placeholder="Kategori Adı" value="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Ana Kategori</label>
                                        <div class="col-md-10">
                                            <select name="MasterCatID" class="form-control">
                                                <option value="-1">Yok</option>
                                                @{
                                                    eTicaretDBEntities db = new eTicaretDBEntities();
                                                }
                                                @foreach (Categories masterCat in db.Categories.Where(x => x.MasterCatID == null).ToList())
                                                {
                                                    <option value="@masterCat.ID">@masterCat.Name</option>
                                                }
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Kategori Açıklaması</label>
                                        <div class="col-md-10">
                                            <input name="Description" type="text" spellcheck="false" class="form-control" placeholder="Kategori Açıklaması" value="">
                                        </div>
                                    </div>
                                    <button name="submit" type="submit" class="btn btn-success pull-right"><b>Ekle</b></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
