<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>BLL Shop - Yönetim</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" href="~/Areas/Admin/Contents/images/favicon.ico">
    <!--Morris Chart CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Contents/plugins/morris/morris.css">
    <link href="~/Areas/Admin/Contents/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Contents/css/icons.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Contents/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Contents/js/jquery.min.js"></script>
</head>

<body class="fixed-left">


    <!-- Begin page -->
    <div id="wrapper">
        <!-- Top Bar Start -->
        <div class="topbar">
            <!-- LOGO -->
            <div class="topbar-left">
                <!--<a href="index.html" class="logo"><span>Up</span>Bond</a>-->
                <!--<a href="index.html" class="logo-sm"><span>U</span></a>-->
                <a href="/Admin/Management/Index" class="logo"><img src="~/Areas/Admin/Contents/images/logo.png" height="20" alt="logo"></a>
                <a href="/Admin/Management/Index" class="logo-sm"><img src="~/Areas/Admin/Contents/images/logo_sm.png" height="30" alt="logo"></a>
            </div>
            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">
                    <div class="">
                        <div class="pull-left">
                            <button type="button" class="button-menu-mobile open-left waves-effect waves-light">
                                <i class="ion-navicon"></i>
                            </button>
                            <span class="clearfix"></span>
                        </div>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <form class="sidebar-search">
                    <div class="">
                        <input type="text" class="form-control search-bar" placeholder="Search...">
                    </div>
                    <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                </form>
                <div class="user-details">
                    <div class="text-center">
                    </div>
                    <div class="user-info">
                        <div class="dropdown">
                            <span style="color:white;">@CustomerData.AdminInfo.Name @CustomerData.AdminInfo.Lastname</span>
                        </div>
                        <div class="">
                            <a href="/admin/admin/logout">Çıkış</a>
                        </div>
                        <!--<p class="text-muted m-0"><i class="fa fa-dot-circle-o text-success"></i> Online</p>-->
                    </div>
                </div>
                <!--- Divider -->


                @{ Html.RenderAction("LeftSideBar", "Management"); }

                <div class="clearfix"></div>
            </div> <!-- end sidebarinner -->
        </div>
        <!-- Left Sidebar End -->
        <!-- Start right Content here -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                @RenderBody()
            </div>
            <!-- End Right content here -->
        </div>
        <!-- END wrapper -->
    </div>
    <!-- jQuery  -->
    <script src="~/Areas/Admin/Contents/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Contents/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Contents/js/modernizr.min.js"></script>
    <script src="~/Areas/Admin/Contents/js/detect.js"></script>
    <script src="~/Areas/Admin/Contents/js/fastclick.js"></script>
    <script src="~/Areas/Admin/Contents/js/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Contents/js/jquery.blockUI.js"></script>
    <script src="~/Areas/Admin/Contents/js/waves.js"></script>
    <script src="~/Areas/Admin/Contents/js/wow.min.js"></script>
    <script src="~/Areas/Admin/Contents/js/jquery.nicescroll.js"></script>
    <script src="~/Areas/Admin/Contents/js/jquery.scrollTo.min.js"></script>
    <!--Morris Chart-->
    <script src="~/Areas/Admin/Contents/plugins/morris/morris.min.js"></script>
    <script src="~/Areas/Admin/Contents/plugins/raphael/raphael-min.js"></script>
    <script src="~/Areas/Admin/Contents/pages/dashborad.js"></script>
    <script src="~/Areas/Admin/Contents/js/app.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
   
</body>
</html>